<h4>Search a Property</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ShowSearchResults">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label for="SearchName" class="control-label">Name</label>
                <input name="SearchName" class="form-control" />
            </div>
            <div class="form-group">
                <label for="SearchRooms" class="control-label">Rooms</label>
                <input Name="SearchRooms" class="form-control" />
            </div>
            <div class="form-group">
                <label for="SearchMeters" class="control-label">Square Meters</label>
                <input name="SearchMeters" class="form-control" />
            </div>
            <div class="form-group">
                <label for="SearchBathroom" class="control-label">Number of Bathrooms</label>
                <input name="SearchBathroom" class="form-control" />
            </div>
            <div class="form-group">
                <label for="SearchPrice" class="control-label">Price</label>
                <input name="SearchPrice" class="form-control" />
            </div>
            <p></p>
            <div class="form-group">
                <input type="submit" value="Search" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

